# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# For Docker (default):
DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/course_selection
DB_HOST=postgres
DB_PORT=5432
DB_NAME=course_selection
DB_USER=postgres
DB_PASSWORD=postgres123
DB_MAX_CONNECTIONS=20

# For local development without Docker, uncomment and use these:
# DATABASE_URL=postgresql://postgres:password@localhost:5432/course_selection
# DB_HOST=localhost

# JWT Configuration
JWT_SECRET=cuhk-course-selection-super-secret-key-change-in-production
JWT_EXPIRY=24h
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_REFRESH_EXPIRY=7d

# Redis Configuration
# For Docker (default):
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# For local development without Docker, uncomment and use these:
# REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Queue Configuration
QUEUE_NAME=enrollment-queue
QUEUE_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=5000

# Enrollment Settings
MAX_CREDITS_PER_SEMESTER=18
MAX_COURSES_PER_SEMESTER=7
ENROLLMENT_START_DATE=2024-01-15T00:00:00Z
ENROLLMENT_END_DATE=2024-02-15T23:59:59Z
